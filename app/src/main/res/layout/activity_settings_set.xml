<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.Dopr.deckofpainrep.SettingsActivity"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:weightSum="10"
    android:orientation="vertical"
    >

    //상단
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="10"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            ></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="3"
            android:text="세트 수 설정"
            android:textColor="@color/gray"
            android:textSize="18dp"
            ></TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/gray"
            android:layout_weight="0.2"
            android:layout_marginHorizontal="20dp"
            ></View>
    </LinearLayout>


    //중단
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="10"
        android:orientation="vertical">

        // 첫번째 줄
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="총 세트 수"
                android:textColor="@color/setting_white"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"

                ></TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></View>
            <EditText
                android:id="@+id/setNumber"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="3"
                android:ems="10"
                android:inputType="number"
                android:background="@color/gray"
                android:textColorHint="@color/main"
                android:maxLength="2"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:enabled="true"

                />

        </LinearLayout>
        // 두번째 줄
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:weightSum="10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* 기본 세트 수는 54세트입니다. \n* 적은 세트 수 부터 시작하는 것을 추천합니다."
                android:textColor="@color/gray"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"></TextView>



        </LinearLayout>
        //세번째 줄
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:weightSum="10">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                ></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:weightSum="10"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_set_apply"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:background="@drawable/how_background"
                    android:text="적용하기"
                    android:textColor="@color/setting_white"
                    android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >
    </LinearLayout>

</LinearLayout>



