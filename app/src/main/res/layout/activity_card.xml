<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Dopr.deckofpainrep.CardActivity"
    android:background="@color/main"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:weightSum="20"
    >

    //topView
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/txt_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/text_main"
            android:textSize="18dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:gravity="center"
            ></TextView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"

            ></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >

            <ImageButton
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main"
                android:scaleType="fitCenter"
                android:src="@drawable/card_btn_reset"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></ImageButton>

        </LinearLayout>



    </LinearLayout>
        

    //card
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        >

        <ImageButton
            android:id="@+id/btn_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/main"
            android:scaleType="fitCenter"
            android:src="@drawable/card_questionmark"
            tools:ignore="SpeakableTextPresentCheck" ></ImageButton>

        <TextView
            android:id="@+id/txt_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="160dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19dp"
            tools:ignore="RtlCompat"
            ></TextView>

        <TextView

            android:id="@+id/txt_totalTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:layout_marginBottom="130dp"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:ignore="RtlCompat"></TextView>

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            android:text=""
            android:textSize="19dp"
            tools:ignore="RtlCompat"></TextView>

    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        >


        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-8765826216210017/4786081065"
            ></com.google.android.gms.ads.AdView>
    </LinearLayout>

</LinearLayout>